<div id="servidor" v-cloak>
  <div class="container col-md-6" >
    <h1 class="text-center">Cadastrar Funcion√°rio</h1>
    <div class="servidor-form">
          <hr/>
      <form action="servidor" method="POST" >
          <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        <div class="form-group">
          <label for="nome">Nome</label>
          <input class="form-control" id="nome" name="nome" value="<%=nome%>" type="text" placeholder="Nome" >
        </div>
        <div class="form-group">
          <label for="matricula">Matricula</label>
          <input class="form-control" id="matricula" name="matricula" value="<%=matricula%>"  type="text" placeholder="Matricula" >
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-4 ">
                
              <label for="data_nasci">Data de Nascimento</label>
              <input class="form-control"
              value="<%=(dataNascimento !== null)?dataNascimento.toISOString().substring(0,10):''%>"
              id="data_nasci" name="dataNascimento" type="date"   placeholder="Data de Nascimento" >
            </div>
            <div class="col-md-8">

                <label for="nomeCargo">Selecione um cargo</label><br>
                <div class="input-group mb-3">
                    
                    <div class="input-group-prepend">
                        
                      <label class="input-group-text" for="inputGroupSelect01">Cargo</label>
                    </div>
                    <select class="custom-select" id="inputGroupSelect01" name="cargo">
                      <option selected></option>
                      <% _.each(cargos, function (cargo) { %>
                        <option value="<%=cargo.nome%>"><%=cargo.nome%></option>
                      <% }) %>
                    </select>
                  </div>
            </div>
        </div>
      </div>
     
      <hr/>
      <br>
      <div class="form-group text-center">
          <div class="col-md-12 ">
            <ajax-button  class="btn btn-outline-primary col-md-4 ">Cadastrar</ajax-button>
            <a href="/pesquisar" class="btn btn-outline-secondary col-md-4">Cancelar</a>
          </div>
        </div>
        
      </form>
     
    </div>
  </div>
  
</div>

</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
